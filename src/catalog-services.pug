append vars
	- title = "Каталог услуг"

prepend styles
	link(rel="stylesheet" href!=`${baseDir}lib/vanilla-rangeslider/css/rangeslider.css"`)
	link(rel="stylesheet" href!=`${baseDir}lib/slim-select/slimselect.css"`)

prepend scripts
	script(src!=`${baseDir}lib/vanilla-rangeslider/js/rangeslider.min.js`)
	script(src!=`${baseDir}lib/slim-select/slimselect.min.js`)

append scripts
	script(src!=`${baseDir}js/filter.js`)
